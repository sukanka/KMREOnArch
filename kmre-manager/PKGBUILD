# Maintainer: sukanka <su975853527@gmail.com>
pkgname=kmre-manager
pkgver=1.5.0
pkgrel=1
pkgdesc='Ubuntu Kylin KMRE, an android container.'
arch=('x86_64')
license=('Apache-2.0')
url='https://gitee.com/openkylin/kylin-kmre-manager'
groups=(kmre)
source=(
    git+${url}.git
)
sha512sums=('SKIP')

depends=(

    qt5-{base,svg}
    gsettings-qt
    speexdsp

)
makedepends=(
    git lsb-release
    qt5-{multimedia,tools}
    boost
)

prepare() {
    cd ${srcdir}/kylin-${pkgname}
    sed -i '/dpkg-buildflags/d' */*.pro
}
build() {
    cd ${srcdir}/kylin-${pkgname}
    qmake .
    make
}
package() {
    cd ${srcdir}/kylin-${pkgname}
    INSTALL_ROOT="${pkgdir}" make install
}
