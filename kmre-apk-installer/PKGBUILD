# Maintainer: sukanka <su975853527@gmail.com>
pkgname=kmre-apk-installer
pkgver=1.1.2
pkgrel=1
groups=(kmre)
pkgdesc='Ubuntu Kylin KMRE, an android container.'
arch=('x86_64')
license=('GPL-3.0-only')
url='https://gitee.com/openkylin/kylin-kmre-apk-installer'
depends=(
    libx11
    openssl
    qt5-{base,x11extras,svg}
)
makedepends=(
    git lsb-release
    qt5-tools
)
source=(git+https://gitee.com/openkylin/kylin-kmre-apk-installer.git)
sha512sums=('SKIP')

build() {
    cd ${srcdir}/kylin-${pkgname}
    qmake .
    make
}

package() {
    cd ${srcdir}/kylin-${pkgname}
    INSTALL_ROOT="${pkgdir}" make install
}
